#!/bin/bash

# Pre-commit hook for shellcheck and shfmt
# This hook runs shellcheck and shfmt on all shell scripts before commit

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if shellcheck is installed
if ! command -v shellcheck &> /dev/null; then
    echo -e "${YELLOW}Warning: shellcheck is not installed. Skipping shellcheck validation.${NC}"
    echo "Install with: brew install shellcheck (macOS) or apt-get install shellcheck (Linux)"
    SKIP_SHELLCHECK=true
else
    SKIP_SHELLCHECK=false
fi

# Check if shfmt is installed
if ! command -v shfmt &> /dev/null; then
    echo -e "${YELLOW}Warning: shfmt is not installed. Skipping shfmt validation.${NC}"
    echo "Install with: brew install shfmt (macOS) or go install mvdan.cc/sh/v3/cmd/shfmt@latest (Linux)"
    SKIP_SHFMT=true
else
    SKIP_SHFMT=false
fi

# Find all shell scripts staged for commit
STAGED_SH_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.sh$' || true)

if [ -z "$STAGED_SH_FILES" ]; then
    echo -e "${GREEN}No shell scripts staged for commit.${NC}"
    exit 0
fi

echo -e "${GREEN}Running pre-commit checks on shell scripts...${NC}"

ERRORS=0

# Run shellcheck on staged shell scripts
if [ "$SKIP_SHELLCHECK" = false ]; then
    echo -e "\n${GREEN}Running shellcheck...${NC}"
    for file in $STAGED_SH_FILES; do
        if [ -f "$file" ]; then
            echo "Checking $file with shellcheck..."
            # Use same options as in GitHub Actions workflow
            if ! shellcheck -e SC1091,SC1117,SC2001,SC2034 "$file"; then
                echo -e "${RED}shellcheck failed for $file${NC}"
                ERRORS=$((ERRORS + 1))
            fi
        fi
    done
fi

# Run shfmt on staged shell scripts
if [ "$SKIP_SHFMT" = false ]; then
    echo -e "\n${GREEN}Running shfmt...${NC}"
    for file in $STAGED_SH_FILES; do
        if [ -f "$file" ]; then
            echo "Checking $file with shfmt..."
            # Check if file needs formatting
            if ! shfmt -d "$file" > /dev/null 2>&1; then
                echo -e "${RED}shfmt: $file needs formatting${NC}"
                echo "Run 'shfmt -w $file' to auto-format"
                ERRORS=$((ERRORS + 1))
            fi
        fi
    done
fi

# Exit with error if any checks failed
if [ $ERRORS -gt 0 ]; then
    echo -e "\n${RED}Pre-commit hook failed. Please fix the errors above before committing.${NC}"
    exit 1
fi

echo -e "\n${GREEN}All pre-commit checks passed!${NC}"
exit 0

